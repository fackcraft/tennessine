{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "manifest_version": {
            "type": "integer",
            "enum": [
                1
            ]
        },
        "width": {
            "type": "integer",
            "minimum": 0
        },
        "height": {
            "type": "integer",
            "minimum": 0
        },
        "colors": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "color": {
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "maximum": 255,
                            "minimum": 0
                        },
                        "maxLength": 3
                    }
                }
            }
        },
        "objects": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "fill": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "rect"
                        ]
                    },
                    "width": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "height": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "x": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "y": {
                        "type": "integer",
                        "minimum": 0
                    }
                }
            }
        }
    }
}
